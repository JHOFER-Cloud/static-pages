{
  "buildCommand": "npm run build",
  "outputDirectory": "_site",
  "cleanUrls": true,
  "redirects": [
    {
      "source": "/",
      "destination": "https://me.jhofer.de",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "pages.jhofer.de"
        }
      ]
    },
    {
      "source": "/:path*",
      "destination": "https://me.jhofer.de/:path*",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "pages.jhofer.de"
        }
      ]
    }
  ]
}
